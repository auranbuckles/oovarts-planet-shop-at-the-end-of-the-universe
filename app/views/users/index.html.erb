<h1>Customer List</h1>

<table class="table">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Email</th>
		<th>Number of Planets</th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.id %></td>
			<td><%= link_to user.name.titleize, user_path(user) %></td>
			<td><%= user.email %></td>
			<td><%= user.planets.count %></td>
		</tr>
	<% end %>
</table>