<div class="row">
	<div class="jumbotron col-md-6">
		<h1 id="featureName"><%= @feature.name.titleize %></h1>
		<p id="featureDescription"><%= @feature.description %></p>
	</div>
	
	<div class="col-md-6">
		<%= image_tag @feature.name.parameterize, :id => "featureImage", :class => "img-rounded img-responsive" %>
	</div>

</div>

<div class="row">
	<button class="js-previous btn btn-default" data-id="<%= @feature.id %>">Previous</button>

	<button class="btn btn-default show-orders">Show all orders for this feature</button>
	
	<button class="js-next btn btn-default" data-id="<%= @feature.id %>">Next</button>
</div> <br>

<div class="orders-list">
	<table class="table"></table>
</div>
