<div class="row">
	<div class="jumbotron col-md-6">
		<h1><%= @feature.name.titleize %></h1>
		<p><%= @feature.description %></p>
	</div>
	
	<div class="col-md-6">
		<%= image_tag @feature.name.parameterize, :class => "img-rounded img-responsive" %>
	</div>

</div>

<div class="row">
	<button id="show-orders" class="btn btn-default"><%= link_to 'Show all orders for features', feature_orders_path(@feature) %></button>
	
	<button id="next-feature" class="btn btn-default">Next</button>
</div>

<div class="orders-list">
	
</div>