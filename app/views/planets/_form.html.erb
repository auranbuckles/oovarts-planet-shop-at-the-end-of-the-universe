<%= form_for planet do |f| %>

	<div class="form-group">
		<%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :population %>
    <%= f.number_field :population, :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :moons %>
    <%= f.number_field :moons, :class => "form-control" %>
	</div>

	<%= f.submit :class => "btn btn-default" %>

<% end %>